# Test Data Management Configuration
# Copy this file to .env.test and configure for your environment

# =============================================================================
# TEST DATA MODE
# =============================================================================
# AUTO (default): Use snapshot if valid, fallback to dynamic
# DYNAMIC: Always create fresh data via seeders (slower, isolated)
# SNAPSHOT: Always restore from snapshot (faster, fails if unavailable)
TEST_DATA_MODE=AUTO

# =============================================================================
# SNAPSHOT CONFIGURATION
# =============================================================================
# Snapshot version tag (used in filename)
SNAPSHOT_VERSION=latest

# Capture snapshot after dynamic bootstrap completes
CAPTURE_SNAPSHOT=false

# Capture snapshot after all tests pass successfully
CAPTURE_SNAPSHOT_ON_SUCCESS=false

# Run pending migrations after snapshot restore
RUN_PENDING_MIGRATIONS=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# These should match your Laravel .env.testing configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=verifast_test
DB_USERNAME=root
DB_PASSWORD=

# =============================================================================
# APPLICATION URLS
# =============================================================================
APP_URL=https://dev.verifast.app
API_URL=https://api-dev.verifast.app

# =============================================================================
# TEST ENVIRONMENT
# =============================================================================
APP_ENV=development
NODE_ENV=test
